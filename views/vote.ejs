<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
    <form class="container">
      <div class="mb-3">
        <label for="option" class="form-label">Option</label>
        <input type="text" class="form-control" id="option" aria-describedby="emailHelp">
      </div>
      <button type="submit" class="btn btn-primary" href="/vote">Vote</button>
    </form>

    <h1>Options</h1>
    <ul>
      <% for(const opt of options) {%>
      <li>
        <button type="submit" class="btn btn-primary" action="/vote"><%=opt.text%></button>
      </li>
      <% } %>
    </ul>
  </body>
</html>
